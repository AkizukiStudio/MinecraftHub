/* 全局样式 */
html,
body
    background-color #0d1117
    /* background-image url(/MinecraftHub/img/bg-1.png)
    background-size cover
    background-position center
    background-attachment fixed */
    color #fff

.page
    padding-bottom 0 !important

a
    color #4285ec

h1
    text-align center

h2
    border-image linear-gradient(to right, #578aef, transparent 90%) 1
    border-bottom 1px solid

/* 导航栏样式 */
.navbar
    background-color #25292e
    border none

.nav-links a:hover,
.nav-links a.router-link-active
    color #4285ec !important

.navbar .site-name
    color #fff !important

.navbar .links
    background-color #25292e !important

.search-box input
    background-color #25292e !important
    color #d1d9e0 !important
    border-radius 0.3rem !important

.search-box input:focus
    border-color #4285ec !important
    color #4285ec !important

.dropdown-wrapper .dropdown-title,
.dropdown-wrapper .mobile-dropdown-title
    color #fff !important

.dropdown-title:hover
    color #4285ec !important

.dropdown-wrapper .nav-dropdown
    background-color #25292e !important
    border 1px solid #4285ec !important

.dropdown-wrapper .nav-dropdown .dropdown-item a.router-link-active::after
    border-left 5px solid #007acc !important

/* 主题内容区域 */
.theme-container
    margin auto
    width 100%

.theme-default-content:not(.custom)
    max-width 90vw
    background-color #161b22dd
    border-radius 0.5rem
    margin auto

.sidebar
    background-color #161b22
    border none

/* 首页特定样式 */
.home .hero .action-button
    background none !important
    border-bottom 1px solid #fff !important
    border 1px solid #fff

.home .hero .action-button:hover
    background-color #444 !important
    color #0d1117
    transition all 0.5s ease

.home .features h2
    color #fff !important

.home .features p
    color #ccc !important

.home .footer
    color #aaa !important

.home .features,
.home .footer
    border-image linear-gradient(to right, #8f41e9, #578aef) 1 !important

/* 通用组件样式 */
.description
    color #ccc !important

blockquote
    background linear-gradient(to right, #578aef33, transparent 55px)
    border-left 0.2rem solid #578aef

.hr-01
    border 0
    border-top none
    border-radius 1px
    height 1px
    background linear-gradient(to right, #8f41e9, #578aef)

.hr-02
    border 0
    border-top none
    border-radius 1px
    height 1px
    background linear-gradient(to right, #578aef, transparent 90%)

/* 定义滚动条宽度和背景颜色 */
::-webkit-scrollbar
    width 5px
    background #161b22

/* 定义滚动条轨道的阴影和圆角 */
::-webkit-scrollbar-track
    background transparent

/* 定义滑块的圆角和阴影 */
::-webkit-scrollbar-thumb
    border-radius 3px
    background-color #5a5a5a5a

/* 响应式样式 */
@media (min-width: 719px) 
    .nav-links a:hover,
    .nav-links a.router-link-active 
        color #4285ec !important

    .nav-item > a:not(.external):hover,
    .nav-item > a:not(.external).router-link-active
        border-bottom: 2px solid #0bbafb !important
    
@media (max-width: 719px)
    .theme-default-content:not(.custom)
        max-width 100vw
        border-radius 0
