{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "module": "ESNext",
        "skipLibCheck": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./docs/*"
            ]
        },
        "types": [
            "vite/client",
            "vitepress/client",
            "vue"
        ]
    },
    "include": [
        "docs/**/*.ts",
        "docs/**/*.vue",
        "docs/**/*.d.ts",
        "docs/.vitepress/**/*.ts",
        "docs/.vitepress/**/*.vue"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}